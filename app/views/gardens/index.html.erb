<!-- Gardens cards -->
<div class="container w-50 mt-3">
  <!-- Search -->
  <%= form_tag gardens_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a garden"
    %>
    <%= submit_tag "Search", class: "btn btn-success" %>
  <% end %>
  <br>
  <% @gardens.each do |garden| %>
  <div class="card-trip">
    <% if garden.photo.nil? %>
    <img src="https://images.unsplash.com/photo-1516253593875-bd7ba052fbc5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80" />
    <% else %><%= image_tag garden.photo %>
    <% end %>
    <div class="card-trip-infos">
      <div>
        <h2><%= link_to garden.name.capitalize, garden_path(garden), class: 'link-green' %></h2>
        <p><%= garden.address %></p>

    </div>
      <h2 class="card-trip-pricing"><%= garden.price_per_day %>â‚¬ per day</h2>

      <%=image_tag(garden.user.avatar, class: "card-trip-user avatar-bordered")%>
<!--       <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> -->
    </div>
  </div>
  <br>
  <% end %>
</div>
